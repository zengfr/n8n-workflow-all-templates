      "type": "n8n-nodes-base.scheduleTrigger",
      "position": [
        -96,
        -80
      ],
      "parameters": {
        "rule": {
          "interval": [
            {
              "triggerAtHour": 12
            }
          ]
        }
      },
      "typeVersion": 1.3
    },
