      "parameters": {
        "color": 6,
        "width": 606,
        "height": 136,
        "content": "## Update Sheet Status\n\nUpdates the original Google Sheets row after posting, allowing you to track which platforms were successfully published.\n"
      },
      "typeVersion": 1
    }
