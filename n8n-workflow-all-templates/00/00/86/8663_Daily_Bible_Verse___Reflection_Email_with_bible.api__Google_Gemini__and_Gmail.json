      "parameters": {
        "sendTo": "={{ $('Config - recipient').item.json.send_to_email }}",
        "message": "={{ $json.content.parts[0].text }}",
        "options": {},
        "subject": "=Daily Bible Verse: Inspiration for Today ({{ $('Bible API - Get random verse').item.json.reference }})"
      },
      "credentials": {
        "gmailOAuth2": {
          "id": "OLOLRWcmGkWhyyWX",
          "name": "Gmail account"
        }
      },
      "typeVersion": 2.1
    },
    {
