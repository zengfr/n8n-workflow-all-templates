        600,
        1140
      ],
      "parameters": {
        "jsCode": "// Get the day of the week from input\nconst dayOfWeek = $json[\"Day of week\"];\nconst isWeekday = (dayOfWeek !== \"Saturday\" && dayOfWeek !== \"Sunday\");\nreturn [{ json: { continueProcessing: isWeekday } }];"
      },
      "notesInFlow": "Skip weekends",
      "typeVersion": 2
    },
