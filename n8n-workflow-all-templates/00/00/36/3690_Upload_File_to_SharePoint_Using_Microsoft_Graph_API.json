              "value": "={{ $json.CLIENT_ID }}"
            },
            {
              "name": "client_secret",
              "value": "={{ $json.CLIENT_SECRET }}"
            },
            {
              "name": "resource",
              "value": "https://graph.microsoft.com"
            }
          ]
        }
      },
      "notesInFlow": true,
      "typeVersion": 4.2
