      "position": [
        -152,
        80
      ],
      "parameters": {
        "model": "llama3.2-16000:latest",
        "options": {}
      },
      "credentials": {
        "ollamaApi": {
          "id": "7td3WzXCW2wNhraP",
          "name": "Ollama - test"
        }
      },
      "typeVersion": 1
    },
    {
      "id": "d48c5d6e-95f2-4e60-a4be-e4aa9d187229",
      "name": "Wait For Response",
      "type": "n8n-nodes-base.wait",
      "position": [
        196,
        -140
      ],
      "webhookId": "8069f833-ea9c-47a3-9a8a-a29c04c329a3",
      "parameters": {
        "amount": 10
      },
      "typeVersion": 1.1
    },
    {
