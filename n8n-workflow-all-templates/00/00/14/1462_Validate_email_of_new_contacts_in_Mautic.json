      "credentials": {
        "mauticOAuth2Api": {
          "id": "54",
          "name": "Mautic account"
        }
      },
      "typeVersion": 1
    },
    {
      "name": "extract information",
      "type": "n8n-nodes-base.itemLists",
      "position": [
        980,
        480
