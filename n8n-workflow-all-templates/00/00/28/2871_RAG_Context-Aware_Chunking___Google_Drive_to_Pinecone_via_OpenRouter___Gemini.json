        0
      ],
      "parameters": {
        "jsCode": "let split_text = \"—---------------------------—-------------[SECTIONEND]—---------------------------—-------------\";\nfor (const item of $input.all()) {\n  item.json.section = item.json.data.split(split_text);\n  item.json.document = JSON.stringify(item.json.section)\n}\nreturn $input.all();"
