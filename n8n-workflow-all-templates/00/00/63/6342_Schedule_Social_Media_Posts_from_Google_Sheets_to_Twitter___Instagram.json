            {
              "id": "6a5be148-4da5-48ab-acae-810ab0f2d825",
              "name": "final_caption",
              "type": "string",
              "value": "={{$json[\"Caption\"]+\"  ..................                     \" +\"[\" + $json[\"Desc\"] +\"]\" +\"  ..................                     \" + $json[\"Hashtags\"]}}"
