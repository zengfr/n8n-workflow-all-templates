      "position": [
        840,
        340
      ],
      "parameters": {
        "options": {},
        "resource": "thread",
        "threadId": "={{ $json.id }}",
        "operation": "get"
      },
      "credentials": {
        "gmailOAuth2": {
          "id": "8",
          "name": "Work Gmail account"
        }
      },
      "retryOnFail": true,
