      "parameters": {
        "jsCode": "const items = $json.line_items || [];\n\nlet message = 'ðŸ§¾ *'+ $input.first().json.name+'*\\n\\n';\n\nitems.forEach(item => {\n  const variant = item.variant_title ? ` ${item.variant_title}` : '';\n  message += `â€¢ ${item.title}${variant} x ${item.quantity} â€” $${item.price}\\n`;\n});\n\nreturn [{\n  json: {\n    text: message,\n    chat_id: $('Get Order ID').first().json.chat_id,  // pass this from previous step\n  \n    message_id: $('Get Order ID').first().json.message_id,\n    \n    parse_mode: \"Markdown\",\n    reply_markup: {\n      inline_keyboard: []\n    }\n  \n  }\n}];\n"
