      "credentials": {
        "openWeatherMapApi": {
          "id": "oH1seTNeKu1d87wm",
          "name": "OpenWeatherMap account"
        }
      },
      "typeVersion": 1
    },
    {
      "id": "95aab17d-c0eb-439c-81ff-7452794a514a",
