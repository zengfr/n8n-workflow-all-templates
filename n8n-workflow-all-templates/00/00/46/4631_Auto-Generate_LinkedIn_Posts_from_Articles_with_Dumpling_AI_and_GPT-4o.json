              "id": "bc9d47f0-b4b9-437e-b37d-c1396d316b15",
              "name": "postText",
              "type": "string",
              "value": "={{ JSON.parse($json[\"output\"]).postText }}\n"
            },
            {
              "id": "fc8def21-2cc2-4029-a66d-df02530a1535",
              "name": "imagePrompt",
              "type": "string",
              "value": "={{ JSON.parse($json[\"output\"]).imagePrompt }}"
